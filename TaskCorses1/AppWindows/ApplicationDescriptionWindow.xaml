        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskCorses1.AppWindows"
        mc:Ignorable="d"
        Title="Описание приложения" MinHeight="300" MinWidth="666" Width="700" Height="350" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="{Binding Description}" VerticalAlignment="Top"  
                   HorizontalAlignment="Center" Width="500" Margin="10"
                   TextWrapping="Wrap" TextAlignment="Justify"/>
        </StackPanel>
       
    </Grid>
</Window>
